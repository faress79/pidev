{% extends 'base.html.twig' %}

{% block title %}Donation index{% endblock %}

{% block body %}
    <h1>Donation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                <th>Message</th>
                <th>event</th>
                <th>Donor</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
                <td>{{ donation.id }}</td>
                <td>{{ donation.amount }}</td>
                <td>{{ donation.message }}</td>
                <td>{{ donation.event.nomEvent }}</td>
                <td>{{ donation.utilisateur.email }}</td>
                <td>
                    <a href="{{ path('app_donation_show', {'id': donation.id}) }}" class = "btn btn-info">show</a>
                    
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div style="text-align: center; margin-top: 20px;">
    <div class="pagination" style="display: inline-block;">
        {{ knp_pagination_render(donations) }}
    </div>
</div>
<a href="{{ path('app_donation_pdf') }}" class = "btn btn-primary">PDF</a>
    
{% endblock %}
