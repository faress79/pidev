{% extends 'base.html.twig' %}

{% block title %}Donation{% endblock %}

{% block body %}
    <h1>Donation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ donation.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ donation.amount }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ donation.message }}</td>
            </tr>
            <tr>
                <th>Donor</th>
                <td>{{ donation.utilisateur.email }}</td>
            </tr>
             <tr>
                <th>Event</th>
                <td>{{ donation.event.nomEvent }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_donation_index') }}" class = "btn btn-primary">back to list</a>

    

    {{ include('donation/_delete_form.html.twig') }}
{% endblock %}
