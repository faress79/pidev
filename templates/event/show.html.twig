{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h1>Event</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ event.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom_event</th>
                        <td>{{ event.nomEvent }}</td>
                    </tr>
                    <tr>
                        <th>Date_event</th>
                        <td>{{ event.dateEvent ? event.dateEvent|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Adress_event</th>
                        <td>{{ event.adressEvent }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ event.description }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('app_event_index_front') }}"class="btn btn-primary">back to list</a>
            <a href="{{ path('app_event_edit', {'id': event.id}) }}"class = "btn btn-primary">edit</a>
    

    {{ include('event/_delete_form.html.twig') }}
            
        </div>

        <div class="col-md-6">
            <img src="{{ asset('img/' ~ event.image) }}" class="card-img-top" alt="Event Image">
        </div>
    </div>
    
{% endblock %}
