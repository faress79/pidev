{% extends 'front.html.twig' %}

{% block title %}Contrat index
{% endblock %}

{% block body %}
	<h1>Contrat index</h1>
<div class="input-group no-border">
  <input type="text" value="" class="form-control" placeholder="Search..." id="myInput">
  <button type="submit" class="btn btn-default btn-round btn-just-icon">
    <i class="material-icons">search</i>
  </button>
</div>
	<table class="table" id="t">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Prix Contrat</th>
				<th scope="col">Date Effet</th>
				<th scope="col">Type Contrat</th>
				 <th scope="col">QR Code</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody id="myTable">
			{% for contrat in contrats %}
				<tr>
					<td>{{ contrat.id }}</td>
					<td>{{ contrat.prixContrat }}</td>
					<td>{{ contrat.dateEffet ? contrat.dateEffet|date('Y-m-d') : '' }}</td>
					<td>{{ contrat.typeContrat }}</td>
					<td>
						<a href="{{ path('app_contrat_showf', {'id': contrat.id}) }}" class="btn btn-primary">Show</a>
						<a href="{{ path('app_contrat_editf', {'id': contrat.id}) }}" class="btn btn-secondary">Edit</a>

					</td>
					
				</tr>
			{% else %}
				<tr>
					<td colspan="5">No records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_contrat_new') }}" class="btn btn-success">Create new</a>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script>
	$(document).ready(function(){

  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();

    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });

});
	</script>
{% endblock %}
