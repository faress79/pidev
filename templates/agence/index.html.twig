{% extends 'base.html.twig' %}

{% block title %}Agence index
{% endblock %}

{% block body %}
	<h1>Agence index</h1>

	<div class="row">
		{% for agence in agences %}
			<div class="col-md-4 mb-4">
				<div class="card">
					<img src="{{ asset('img/' ~ agence.image) }}" class="card-img-top" alt="{{ agence.image }}" width="200" height="200">
					<div class="card-body">
						<h5 class="card-title">{{ agence.nom }}</h5>
						<p class="card-text">Tel:
							{{ agence.tel }}</p>
						<p class="card-text">Address:
							{{ agence.address }}</p>
						<p class="card-text">Email:
							{{ agence.email }}</p>
						<a href="{{ path('app_agence_show', {'id': agence.id}) }}" class="btn btn-primary">Show</a>
						<a href="{{ path('app_agence_edit', {'id': agence.id}) }}" class="btn btn-secondary">Edit</a>
					</div>
				</div>
			</div>
		{% else %}
			<div class="col-md-12">
				<p>No records found</p>
			</div>
		{% endfor %}
	</div>

	<a href="{{ path('app_agence_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
